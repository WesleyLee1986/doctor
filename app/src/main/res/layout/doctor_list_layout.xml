<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <include
        android:id="@+id/ll_title"
        layout="@layout/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_title"
        android:background="@color/primary_background_color" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_title"
        android:background="@color/float_stock_gray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:ignore="UselessLeaf">

            <TextView
                android:id="@+id/tv_title_visit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出诊日"
                android:textColor="@color/title_text_color"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_can_select_visit_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_visit_date"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_monday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/label_item_bg"
                    android:gravity="center"
                    android:tag="1"
                    android:text="周一"
                    android:textColor="@color/accent_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_tuesday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/label_item_bg"
                    android:gravity="center"
                    android:tag="2"
                    android:text="周二"
                    android:textColor="@color/accent_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_wednesday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/label_item_bg"
                    android:gravity="center"
                    android:tag="3"
                    android:text="周三"
                    android:textColor="@color/accent_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_thursday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/label_item_bg"
                    android:gravity="center"
                    android:tag="4"
                    android:text="周四"
                    android:textColor="@color/accent_text_color"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_can_select_visit_date_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_can_select_visit_date"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_friday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/label_item_bg"
                    android:gravity="center"
                    android:tag="5"
                    android:text="周五"
                    android:textColor="@color/accent_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_saturday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/label_item_bg"
                    android:gravity="center"
                    android:tag="6"
                    android:text="周六"
                    android:textColor="@color/accent_text_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_sunday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/label_item_bg"
                    android:gravity="center"
                    android:tag="7"
                    android:text="周日"
                    android:textColor="@color/accent_text_color"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_can_select_visit_date_2"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="坐诊医院"
                android:textColor="@color/title_text_color"
                android:textSize="16sp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </FrameLayout>

</RelativeLayout>